<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/reg_email_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reg_email"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="이메일"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_reg_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="ex)login@gmail.com"
            android:inputType="textEmailAddress" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/reg_pw_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reg_pw"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="비밀번호"
            android:textColor="#0B0A0A"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_reg_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="*****"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reg_pwck_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reg_pwck"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="비밀번호 확인"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_reg_pwck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="*****"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reg_nickname_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reg_nickname"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="닉네임"
            android:textColor="#050505"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_reg_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="닉네임을 입력하세요"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reg_phone_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reg_phone"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="휴대폰번호"
            android:textColor="#040303"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_reg_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="ex)01012345678"
            android:inputType="phone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reg_profile_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reg_rg"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="가입종류"
            android:textColor="#020202"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/rg_reg_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checkedButton="@id/rb_reg_user"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_reg_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="일반" />

            <RadioButton
                android:id="@+id/rb_reg_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사업주" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btn_register_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btnround"
        android:text="가입하기"
        android:textColor="#000000"
        android:textSize="20sp" />

</LinearLayout>